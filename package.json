  "collaborators": [
    "Andrew Wheeler",
    "Michael Ericson"
  ],
  "license": "MIT",
  "bugs": {},
  "devDependencies": {
    "@types/chai": "4.0.5",
    "@types/hapi": "^17.8.5",
    "@types/inversify": "^2.0.33",
    "@types/mocha": "^2.2.48",
    "@types/node": "8.0.53",
    "@types/sinon": "4.0.0",
    "@types/supertest": "2.0.3",
    "chai": "^4.1.2",
    "codecov": "^3.7.0",
    "del": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-install": "^1.1.0",
    "gulp-istanbul": "1.1.2",
    "gulp-mocha": "^3.0.1",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-tslint": "8.1.2",
    "gulp-typescript": "^3.2.4",
    "hapi-pino": "^8.0.1",
    "mocha": "^7.2.0",
    "nyc": "^15.0.1",
    "publish-please": "^5.5.1",
    "reflect-metadata": "^0.1.10",
    "sinon": "^4.5.0",
    "source-map-support": "0.5.0",
    "supertest": "^3.0.0",
    "ts-mocha": "^7.0.0",
    "tslint": "5.8.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@hapi/hapi": ">=18.4.1",
    "inversify": "^5.0.1"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts",
      "examples"
    ],
    "check-coverage": true,
    "watermarks": {
      "lines": [
